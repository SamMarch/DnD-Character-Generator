<link rel="stylesheet" href="/css/update.css" />
<div>
  <div>
    <div class="container mx-auto mt-5">
      <div class="flex w-full justify-center">
        <div class="w-fit relative">
          <section>
          <button class="absolute right-0 w-12 h-12 rounded-full border-[1px] border-slate-300" id="name-btn">
            <i class="fa-light fa-pen fa fa-lg w-fit h-fit pointer-events-none" id="name-icon"></i>
          </button>
          <input id="name-input" class="text-center text-7xl w-full rounded-lg character" value={{character_name}} readonly>
          <img id="name-underline" class="-mt-3"  src="/images/underline.png" alt="">
          </section>
          <section class="flex w-full justify-center mb-5 p-3">

            <figure class="relative max-w-sm transition-all duration-300 filter grayscale hover:grayscale-0">
              <img class="p-1 w-64 h-64 rounded-full ring-2 ring-gray-300 dark:ring-gray-500" src="{{avatar}}"
                alt="avatar">
              </a>
            </figure>

          </section>
        </div>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-3 mb-3">
        <div class=" text-center p-2 mx-5">
          <h2 class="relative text-3xl"><span class="absolute left-4 -bottom-2 text-xl">Race:</span>{{race.race_name}}</h2>
          <img src="/images/underline.png" alt="">
        </div>
        <div class=" text-center p-2 mx-5">
          <h2 class="relative text-3xl"><span class="absolute left-4 -bottom-2 text-xl">Class:</span>{{class.class_name}}</h2>
          <img src="/images/underline.png" alt="">
        </div>
      </div>

      <div class="grid grid-cols-3 lg:grid-cols-6 gap-3 place-items-center" id="attribute-container">
        {{#each attributes as |attribute|}}
        {{>attribute-frame attribute="attribute"}}
        {{/each}}
      </div>

      <a class="btn_signup" type="submit" id="update-btn">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        Update
      </a>
      <div class="border-2 border-black text-center p-2 mx-5">
        <form id="upload-image-form">
          <input id="fileupload" type="file" name="fileupload" />
          <button id="upload-button" type="submit"> Upload </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/update.js"></script>