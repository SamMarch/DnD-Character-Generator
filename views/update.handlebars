<link rel="stylesheet" href="/css/update.css" />

<div class="container flex flex-col w-full h-full overflow-auto max-w-4xl items-center mx-auto mt-5">
  {{! NAME }}
  <section class="relative">
    <button id="name-btn" class="absolute right-0 w-12 h-12 rounded-full border-[1px] border-blue-300">
      <i class="fa-light fa-pen fa fa-lg w-fit h-fit pointer-events-none" id="name-icon"></i>
    </button>
    <input id="name-input" class="text-center text-7xl w-full rounded-lg character" value="{{character_name}}"
      readonly />
    <img id="name-underline" class="-mt-3" src="/images/underline.png" alt="" />
  </section>

  {{! IMAGE }}
  <section class="relative sm:order-4 flex w-fit justify-center mb-5 p-3">
    <figure class="relative max-w-sm transition-all duration-300 filter grayscale hover:grayscale-0">
      <img id="avatar-img" class="p-1 w-64 h-64 object-cover rounded-full ring-2 ring-gray-300 dark:ring-gray-500"
        src="{{avatar}}" alt="avatar" />
      <label for="avatar-upload"
        class="absolute top-[5%] right-[5%] grid place-items-center w-12 h-12 rounded-full border-[1px] border-blue-300 cursor-pointer bg-white"><i
          class="fa fa-pen fa-light"></i></label>
      <input id="avatar-upload" name="avatar" type="file" accept="image/png, image/jpeg" />
    </figure>
  </section>

  {{! ATTRIBUTES }}
  <div class="grid grid-cols-3 lg:grid-cols-6 gap-3 place-items-center" id="attribute-container">
    {{#each attributes as |attribute|}}
    {{>attribute-frame attribute="attribute"}}
    {{/each}}
  </div>

  {{! RACE and CLASS }}
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-3 mb-3">
    <div class="text-center p-2 mx-5">
      <h2 class="relative text-3xl"><span class="absolute left-4 -bottom-2 text-xl">Race:</span>{{race.race_name}}</h2>
      <img src="/images/underline.png" alt="" />
    </div>
    <div class="text-center p-2 mx-5">
      <h2 class="relative text-3xl"><span class="absolute left-4 -bottom-2 text-xl">Class:</span>{{class.class_name}}
      </h2>
      <img src="/images/underline.png" alt="" />
    </div>
  </div>

  {{!-- DESCRIPTION --}}
  <section class="frame relative">
    <button id="description-btn" class="absolute right-0 w-12 h-12 rounded-full border-[1px] border-blue-300">
      <i class="fa-light fa-pen fa fa-sm w-fit h-fit pointer-events-none" id="description-icon"></i>
    </button>
    <input type="text" id="description-input" class=" mt-5 text-center text-base h-25 w-full rounded-lg info mb-5"
      placeholder="Describe your Character" value="{{character_description}}" readonly />
    <img id="description-underline" class="mt-3 mb-3" src="/images/underline.png" alt="" />
  </section>
</div>

<script src="/js/update.js"></script>