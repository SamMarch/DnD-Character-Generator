<div class="login-box">
  <h2>Login</h2>
  <form class="login-form" autocomplete="off">
    <div class="user-box">
      <input
        class="form-input"
        type="text"
        autocomplete="off"
        id="email-login"
        name=""
        required=""
      />
      <label for="email-login">Email</label>
    </div>
    <div class="user-box">
      <input
        class="form-input"
        type="password"
        autocomplete="off"
        id="password-login"
        name=""
        required=""
      />
      <label for="password-login">Password</label>
    </div>
    <button class="btn_submit" type="submit" href="#">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      Login
    </button>
    <a class="btn_signup" type="submit" href="/signup">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      Signup
    </a>
  </form>
</div>
